							li.media
								.pull-left
									img(src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1484916496040&di=dacb2dece0941423cbd9bb54f3a7053a&imgtype=0&src=http%3A%2F%2Fimg3.duitang.com%2Fuploads%2Fitem%2F201601%2F03%2F20160103085338_eyBCL.jpeg",style="width:64px;height:64px;")		
